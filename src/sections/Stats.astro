---
const stats = [
  {
    title: "Deals Shared",
    value: "1000+",
  },

  {
    title: "Happy Customers",
    value: "2000+",
  },
  {
    title: "Savings Made",
    value: "$100k+",
  },
  {
    title: "Partner Sites",
    value: "20+",
  },
];
---

<div
  class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20"
>
  <div class="grid grid-cols-2 row-gap-8 md:grid-cols-4 gap-8">
    {
      stats.map((s) => (
        <div class="text-center md:border-r">
          <h6 class="text-4xl font-bold lg:text-5xl xl:text-6xl">{s.value}</h6>
          <p class="text-sm font-medium tracking-widest text-gray-800 uppercase lg:text-base">
            {s.title}
          </p>
        </div>
      ))
    }
  </div>
</div>
